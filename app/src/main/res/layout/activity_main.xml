<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="30dp"
        android:layout_height="wrap_content">

        <com.example.myapplication.view.SelectorTextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="12345"
            android:textSize="20sp"
            app:pressedShape="oval"
            app:selectedShape="oval"
            app:normalColor="#ff0000"
            app:pressedColor="#ffff00"
            app:selectedColor="#ffff00"
            app:radius="30dp"
            app:ripple="true" />

        <com.example.myapplication.SelectorTextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:text="1234" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>